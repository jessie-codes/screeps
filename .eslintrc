{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"globals": {
		"_": true,
		"ATTACK": true,
		"CARRY": true,
		"ERR_BUSY": true,
		"ERR_NOT_ENOUGH_ENERGY": true,
		"ERR_NOT_IN_RANGE": true,
		"FIND_CONSTRUCTION_SITES": true,
		"FIND_HOSTILE_CREEPS": true,
		"FIND_MY_CONSTRUCTION_SITES": true,
		"FIND_MY_CREEPS": true,
		"FIND_SOURCES": true,
		"FIND_STRUCTURES": true,
		"Game": true,
		"HEAL": true,
		"Memory": true,
		"MOVE": true,
		"RANGED_ATTACK": true,
		"RESOURCE_ENERGY": true,
		"STRUCTURE_CONTAINER": true,
		"STRUCTURE_EXTENSION": true,
		"STRUCTURE_RAMPART": true,
		"STRUCTURE_ROAD": true,
		"STRUCTURE_SPAWN": true,
		"STRUCTURE_TOWER": true,
		"STRUCTURE_WALL": true,
		"TOUGH": true,
		"WORK": true
	},
	"rules": {
		"arrow-body-style": ["error", "always"],
		"arrow-parens": "error",
		"comma-dangle": ["error", "never"],
		"eqeqeq": "error",
		"func-call-spacing": ["error", "never"],
		"indent": ["error", "tab"],
		"keyword-spacing": ["error", {"before": true, "after": true}],
		"no-bitwise": "error",
		"no-console": "off",
		"no-else-return": "error",
		"no-eval": "error",
		"no-mixed-requires": "error",
		"no-ternary": "error",
		"no-trailing-spaces": "error",
		"no-unused-vars": "error",
		"no-var": "error",
		"quotes": ["error", "single", {"allowTemplateLiterals": true}],
		"strict": ["error", "global"]
	}
}